{
  "tasks": {
    "start": "deno run --allow-read --allow-net --allow-env --env-file --watch src/index.ts",
    "compile": "deno compile --allow-read --allow-net --allow-env --output emby2openlist src/index.ts",
    "test": "deno test --allow-net",
    "lint": "deno lint"
  },
  "imports": {
    "@std/dotenv": "jsr:@std/dotenv@^0.225.6",
    "@std/expect": "jsr:@std/expect@^1.0.17",
    "@std/testing": "jsr:@std/testing@^1.0.16",
    "hono": "npm:hono@^4.11.4",
    "quick-lru": "npm:quick-lru@^7.3.0"
  },
  "fmt": {
    "lineWidth": 120,
    "indentWidth": 2
  },
  "lint": {
    "rules": {
      "exclude": [
        "no-explicit-any",
        "no-unused-vars"
      ]
    }
  }
}
